{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "./build",
    "strict": true,
    "target": "es2021",
    "forceConsistentCasingInFileNames": true
  },
  "include": [ "src/**/*.ts" ]
}